generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String
  password String
  essays Essay[]

  @@map("users")
}

model Essay {
  id    Int     @id @default(autoincrement())
  text String?
  urlImage  String?
  author    User?    @relation(fields: [authorId], references: [id])
  authorId  Int? 

  @@map("essays")
}

